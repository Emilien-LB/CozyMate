<h1 class="text-center">Tasks</h1>

<div class="container text-center">
  <div class="daily d-flex flex-column justify-content-center">
    <div>
      <h2>Daily</h2>
      <% @tasks.each do |task| %>
        <% if task.frequency_type == 'daily' %>
          <div>
            <%= task.task_name %>
            <%= task.points %>
            <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_task_path(task) %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div>
      <h2>Weekly</h2>
      <% @tasks.each do |task| %>
        <% if task.frequency_type == 'weekly' %>
          <div>
            <%= task.task_name %>
            <%= task.points %>
            <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_task_path(task) %>
          </div>
          <% end %>
      <% end %>
    </div>

    <div>
      <h2>Monthly</h2>
      <% @tasks.each do |task| %>
        <% if task.frequency_type == 'monthly' %>
          <div>
            <%= task.task_name %>
            <%= task.points %>
            <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <%= link_to "Edit", edit_task_path(task) %>
          </div>
          <% end %>
      <% end %>
    </div>
    <%= link_to "Add", new_task_path %>
  </div>
</div>
