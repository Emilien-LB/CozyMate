  <div class="title-ranking">
    <h1 class="yellow-title">Ranking</h1>
    <span><i class="fa-regular fa-star" style="color: #FFCC69;"></i></span>
  </div>
  <p class="p-ranking">Who’s gonna win ?</p>

  <div class="ranking-first">
    <div class="ranking">
      <%# <%= render "ranking_card", user: @users.first %>


      <%# _______________ FIRST CARD ____________________ %>
      <div class="picture-points">
        <div class="first-inner-card inner-card">
          <%= cl_image_tag @users.first.photo.key, height: 120, width: 120, crop: :fill, class:" rounded-circle" %>
          <div class="stats-points">
            <%= @users.first.total_points %> <i class="fa-regular fa-star" style="color: #000000;"></i>
          </div>
        </div>
      </div>
      <%# _______________ FIRST CARD ____________________ %>

    </div>
  </div>
  <div class="ranking-second">
    <div class="ranking">

      <%# _______________ SECONDCARD ____________________ %>
      <div class="picture-points">
        <div class="second-inner-card inner-card">
          <%= cl_image_tag @users.second.photo.key, height: 90, width: 90, crop: :fill, class:" rounded-circle" %>
          <div class="stats-points">
            <%= @users.second.total_points %> <i class="fa-regular fa-star" style="color: #000000;"></i>
          </div>
        </div>
      </div>
      <%# _______________ SECONDCARD ____________________ %>

        <div class="trophy">
          <i class="fa-solid fa-trophy fa-bounce" style="color: #ffcc69;"></i>
        </div>

      <%# _______________ THIRDCARD ____________________ %>
      <div class="picture-points">
        <div class="third-inner-card inner-card">
          <%= cl_image_tag @users.third.photo.key, height: 70, width: 70, crop: :fill, class:" rounded-circle" %>
          <div class="stats-points">
            <%= @users.third.total_points %> <i class="fa-regular fa-star" style="color: #000000;"></i>
          </div>
        </div>
      </div>
      <%# _______________ THIRDCARD ____________________ %>

    </div>
  </div>

    <%# _______________ FORM ____________________ %>
  <div class="form-month">
    <%= form_with(url: ranking_path, method: :get, local: true) do |form| %>
      <div class="custom-form">
          <%= form.label :month, "Select a month:" %>
          <%= form.date_select :month, { discard_day: true, end_year: Date.today.year, start_year: Date.today.year - 1 }, { class: 'form-control' } %>
      </div>
      <div class="text-center">
        <%= form.submit 'Filter', class: 'btn btn-info' %>
        </div>
    <% end %>
  </div>
</div>
