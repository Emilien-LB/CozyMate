<div class="simple-calendar">
  <h1 class="calendar-title">Calendar</h1>
  <div class="calendar-button d-flex align-items-center justify-content-between">
    <div class="calendar-heading my-2">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: 'btn btn-outline-primary' %>
      <span class="calendar-title btn btn-primary"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: 'btn btn-outline-primary' %>
    </div>
    <%= link_to 'Create event', new_event_path, class: 'btn btn-outline-warning' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <td class="<%= calendar.td_classes_for(day).join(' ') %>">
              <%= day.day %>

              <% day_events = @events.select { |event| event.start_time.to_date == day } %>

              <% day_events.each do |event| %>
                <br>
                <%= link_to event.title, event_path(event) %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
