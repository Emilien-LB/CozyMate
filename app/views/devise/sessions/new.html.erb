<div class="tasks-new-wrapper">
  <div class="tasks-new-banner">
    <h2 class="edit-create-title text-center">Log in</h2>
  </div>

  <div class="container-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <div class="form-label">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "custom-input" } %>
        </div>

        <div class="form-label">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "custom-input" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-label">
            <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "form-check" }, input_html: { class: "form-check-input tag-selector" }, label_html: { class: "form-check-label" } %>
          </div>
        <% end %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button-validates" %>
      </div>
    <% end %>
  </div>

  <div class="form-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
