<div class="container-form" data-controller="form-event">

  <%= form_for @event, html: { class: 'form-group' } do |f| %>
    <div class="form-group">
      <%= f.label :title, "Name" %>
      <%= f.text_field :title, placeholder: "Board games evening", maxlength:"20",  class: 'form-control', data: {action: "keyup->form-event#countingLettersName"} %>
      <p class="counting-characters-box" data-form-event-target="divCountingName">
      </p>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_field :description, placeholder: "Cheaters are not invited", maxlength:"150", class: 'form-control', data: {action: "keyup->form-event#countingLettersEventDescription"} %>
       <div class="counting-characters-box" data-form-event-target="divCountingEventDescription">
      </div>
    </div>

    <div class="form-group">
      <%= f.label :start_time, "Start time" %>
      <%= f.datetime_field :start_time,  placeholder: "18:30", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :end_time, "End time" %>
      <%= f.datetime_field :end_time, placeholder: "23:30", class: 'form-control' %>
    </div>

    <%= f.submit "Add", class: 'btn btn-primary' %>
  <% end %>

</div>
